extends ../../../../_include/_layout.pug

block title
  title 信用卡資訊 | LC E-SHOP
block content

  -
    var breadcrumbList = [
      {
        name: '首页',
        href: '/'
      },
      {
        name: '我的帳戶',
        href: '/ec/consumer/history/'
      },
      {
        name: '信用卡資訊',
        href: '/ec/consumer/card/add/'
      }
    ]
  include ../../../../_include/_breadcrumblist.pug


  section.contentSection
    h1.contentSection__title.contentSection__title--center 信用卡資訊

    div.l-contentsInner.l-contentsInner--form
      form(action="/ec/consumer/history/", method="POST")

        ul.l-form
          li.l-form__item
            label.l-form__label.l-form__label--half
              h4.l-form__title 信用卡卡号
              p.l-form__detail
                input(type="text", placeholder="例如：1234567890123456")
              p
                small 请用半角数字输入
          li.l-form__item
            label.l-form__label.l-form__label--half
              h4.l-form__title 安全码
              p.l-form__detail
                input(type="text")
            p.l-form__note
              small
                | * 
                button.js-openModal(
                  type="button"
                  aria-controls="modalCSC"
                  aria-haspopup="true"
                )
                  | 安全码位置
                  i.icon--arrow2Right
          li.l-form__item
            label.l-form__label.l-form__label--select
              h4.l-form__title.is-required 信用卡有效日期
              p.l-form__detail
                select(data-size="140")
                  option 请选择
                  - for (var i = 1; i <= 12; i++)
                    option #{i}
            label.l-form__label.l-form__label--select
              h4.l-form__title
              p.l-form__detail
                select(data-size="140")
                  option 请选择
                  - for (var i = 2019; i <= 2039; i++)
                    option #{i}
            p.l-form__note
              small * 请注意，通常有效日期为月／年的顺序表示
          li.l-form__item
            label.l-form__label.l-form__label--half
              h4.l-form__title 持卡人姓名
              p.l-form__detail
                input(type="text", placeholder="例如： Jun Ma")
              p
                small 可使用半角英文及半格
          li.l-form__item
            label.l-form__label.l-form__label--select
              h4.l-form__title.is-required 付款方式
              p.l-form__detail
                select
                  option 请选择
                  option 一次性还款
            
        p.l-contentsInner__buttons
          button.l-button--submit.js-openModal.js-lc--submit(
            type="button"
            aria-controls="modalPayment"
            aria-haspopup="true"
          )
            span.l-button__label 登入
            i.l-button__icon.icon--arrow2Right
          button(type="button", onclick="history.back();").l-button--cancel
            i.l-button__icon.icon--arrowLeft
            span.l-button__label 返回

      .l-modal#modalCSC
        .l-modal__bg.js-closeModal
        .l-modal__body
          h3.l-modal__title 安全码位置
          ul.l-form
            li.l-form__item
              p.l-form__note
                small
                  | ・如使用VISA，MasterCard，JCB，Diners时，（请参照下图A）<br>
                  | 　卡片背面签名栏末三码数字<br>
                  | ・如使用American Express时，（请参照下图B）<br>
                  | 　卡片正面右上（或者左上）的四码数字
                img(src="/assets/img/img_securitycode.gif", alt="安全码", width="240")
                    
            p.l-modal__buttons
              button(type="button").l-button--cancel.js-closeModal
                i.l-button__icon.icon--close
                span.l-button__label 取消

      .l-modal#modalPayment
        .l-modal__bg
        .l-modal__body
          h3.l-modal__title 数据发送！
          p.l-form__note.c-align--center 一段时间，请耐心等待...

    include ../../../../_include/_mypage-navi.pug
        
  script.
    $(function () {
      $('.js-lc--submit').on('click', function () {
        setTimeout(function () {
          location.href = '/ec/cart/complete/';
        }, 1000);
      });
    })
