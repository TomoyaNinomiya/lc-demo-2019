extends ../../../../_include/_layout.pug

block title
  title 会员信息 | LC E-SHOP
block header
  - var isAuthorized = true;
  include ../../../../_include/_header.pug
block content

  -
    var breadcrumbList = [
      {
        name: '首页',
        href: '/'
      },
      {
        name: '我的帳戶',
        href: '/ec/consumer/history/'
      },
      {
        name: '会员信息',
        href: '/ec/consumer/address/list/'
      }
    ]
  include ../../../../_include/_breadcrumblist.pug


  section.contentSection
    h1.contentSection__title.contentSection__title--center 会员信息

    div.l-contentsInner

        section.shipList
          h2.shipList__title 收货地址一览
          ul.shipList__list
            li.shipList__item
              .shipList__box
                .shipList__main
                  header.shipList__header
                    h3.shipList__name
                      i.c-inputUI.c-inputUI--checkbox
                      | 星野 翔太
                      small (会员注册住址)
                    p.shipList__tel
                      | 09012345678
                  p.shipList__address
                    | 171-0033
                    | 東京都豊島区高田3ー9−7 ダイワビル
                p.shipList__controls
                  a(href="/ec/consumer/edit/").l-button--edit
                    span.l-button__label 更改
            li.shipList__item
              .shipList__box
                .shipList__main
                  header.shipList__header
                    h3.shipList__name
                      i.c-inputUI.c-inputUI--checkbox
                      | 星野 翔太
                    p.shipList__tel
                      | 02160206756
                  p.shipList__address
                    | 上海市黄浦区淮海中路222号力宝广场26楼
                p.shipList__controls
                  a(href="/ec/consumer/address/add/").l-button--edit
                    span.l-button__label 更改
                  a(href="").l-button--delete
                    span.l-button__label 删除
            li.shipList__item
              a(href="/ec/consumer/address/add/").shipList__box.shipList__box--button
                i.icon--plus
                | 追加新收货地址

        p.l-contentsInner__buttons
          button(type="button", onclick="history.back();").l-button--cancel
            i.l-button__icon.icon--arrowLeft
            span.l-button__label 返回

    include ../../../../_include/_mypage-navi.pug
