extends /_include/_layout.pug

block title
  title 定期订购记录 | LC E-SHOP
block header
  - var isAuthorized = true;
  include /_include/_header.pug
block content

  -
    var breadcrumbList = [
      {
        name: '首页',
        href: '/'
      },
      {
        name: '我的帳戶',
        href: '/ec/consumer/history/'
      },
      {
        name: '定期订购记录',
        href: '/ec/consumer/regular_list/'
      },
      {
        name: '详细信息',
        href: '/ec/consumer/regular_detail/1/'
      },
      {
        name: '送货地址变更',
        href: '/ec/consumer/regualr_address_edit/1/'
      }
    ]
  include /_include/_breadcrumblist.pug


  section.contentSection
    h1.contentSection__title.contentSection__title--center 定期订购记录 - 送货地址变更

    div.l-contentsInner

      form(action="/ec/consumer/regular_detail/1/", method="POST")
        section.shipList
          h2.shipList__title 收货地址一览
          ul.shipList__list
            li.shipList__item
              input#shipRadio1(type="radio", name="radio1", checked)
              .shipList__box
                label(for="shipRadio1").shipList__main
                  header.shipList__header
                    h3.shipList__name
                      i.c-inputUI.c-inputUI--checkbox
                      | 星野 翔太
                      small (会员注册住址)
                    p.shipList__tel
                      | 09012345678
                  p.shipList__address
                    | 171-0033
                    | 東京都豊島区高田3ー9−7 ダイワビル
                p.shipList__controls
                  a(href="").l-button--edit
                    span.l-button__label 更改
            li.shipList__item
              input#shipRadio2(type="radio", name="radio1")
              .shipList__box
                label(for="shipRadio2").shipList__main
                  header.shipList__header
                    h3.shipList__name
                      i.c-inputUI.c-inputUI--checkbox
                      | 星野 翔太
                    p.shipList__tel
                      | 02160206756
                  p.shipList__address
                    | 上海市黄浦区淮海中路222号力宝广场26楼
                p.shipList__controls
                  a(href="").l-button--edit
                    span.l-button__label 更改
                  a(href="").l-button--delete
                    span.l-button__label 删除
            li.shipList__item
              a(href="").shipList__box.shipList__box--button
                i.icon--plus
                | 追加新收货地址

        p.l-contentsInner__buttons
          button(type="submit").l-button--submit
            span.l-button__label 登入
          a(href="/ec/consumer/regular_detail/1/").l-button--cancel
            i.l-button__icon.icon--arrowLeft
            span.l-button__label 返回

    include /_include/_mypage-navi.pug
