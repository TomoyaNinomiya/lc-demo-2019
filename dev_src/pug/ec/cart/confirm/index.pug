extends /_include/_layout.pug

block title
  title 确认购物清单 | LC E-SHOP
block content

  -
    var breadcrumbList = [
      {
        name: '首页',
        href: '/'
      },
      {
        name: '确认购物清单',
        href: '/ec/cart/confirm/'
      }
    ]
  include /_include/_breadcrumblist.pug


  section.contentSection
    h1.contentSection__title.contentSection__title--center 确认购物清单

    - var step = 5;
    include /_include/_steplist.pug

    div.l-contentsInner
      form(action="/ec/cart/card/", method="POST")

        p.l-contentsInner__buttons
          button.l-button--submit.l-button--action
            span.l-button__label 提交订单
            i.l-button__icon.icon--check
        
        table.c-table.c-table--numbers
          tbody
            tr
              th 商品金额总计
              td
                em 318.00CNY
              td (4,780JPY)
            tr
              th 附加商品总计
              td
                em 0.00CNY
              td (0JPY)
            tr
              th 邮费
              td
                em 0.00CNY
              td (0JPY)
            tr
              th 手续费
              td
                em 0.00CNY
              td (0JPY)
            tr
              th 积分优惠
              td
                em -0.00CNY
              td (0JPY)
            tr
              th 优惠券优惠
              td
                em -0.00CNY
              td (0JPY)
        p.contentSection__note.contentSection__note--large.c-align--right
          | 总计: 
          strong 318.00CNY 
            small (4,786JPY)
        
        h2.c-heading--3 积分
        table.c-table.c-table--numbers
          tbody
            tr
              th 目前积分本次
              td
                em 0分
            tr
              th 使用积分本次
              td
                em -0分
            tr
              th 预计获得积分
              td
                em +40分
            tr
              th 共计积分
              td
                em 0分
        

        section.shipList
          h2.shipList__title 收货地址一览
          ul.shipList__list
            li.shipList__item
              .shipList__box
                .shipList__main
                  header.shipList__header
                    h3.shipList__name 星野 翔太
                    p.shipList__tel 09012345678
                  p.shipList__address
                    | 171-0033
                    | 東京都豊島区高田3ー9−7 ダイワビル
                  ul
                    .productInfo
                      figure.productInfo__figure
                        a.productInfo__figure__inner(href="/product/1/")
                          img(src="/assets/img/img_product_02.jpg", alt="product name")
                      .productInfo__text
                        h2.productInfo__name
                          a(href="/product/1/") 小熊夏季新款女装可爱卡通短袖t恤宽松韩版半袖
                        .productInfo__detail
                          dl.productInfo__detail__list
                            .productInfo__detail__item
                              dt.productInfo__detail__label 价格
                              dd.productInfo__detail__detail
                                | 159.00CNY
                                small (2,393JPY)
                            .productInfo__detail__item
                              dt.productInfo__detail__label 数量
                              dd.productInfo__detail__detail 1
                  dl.shipList__info
                    .shipList__info__item
                      dt.shipList__info__label 送货方式
                      dd.shipList__info__detail EMS
                    .shipList__info__item
                      dt.shipList__info__label 送货时间
                      dd.shipList__info__detail 2019/10/10 14:00 - 16:00
        
        h2.c-heading--3 付款方式
        p credit

        h2.c-heading--3 其他咨询
        p 不指定

            
        p.l-contentsInner__buttons
          button.l-button--submit.l-button--action
            span.l-button__label 提交订单
            i.l-button__icon.icon--check
          button(type="button", onclick="history.back();").l-button--cancel
            i.l-button__icon.icon--arrowLeft
            span.l-button__label 返回
