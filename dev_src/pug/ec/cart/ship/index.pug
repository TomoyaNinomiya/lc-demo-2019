extends ../../../_include/_layout.pug

block title
  title 指定收货地址 | LC E-SHOP
block content

  -
    var breadcrumbList = [
      {
        name: '首页',
        href: '/'
      },
      {
        name: '指定收货地址',
        href: '/ec/cart/ship/'
      }
    ]
  include ../../../_include/_breadcrumblist.pug


  section.contentSection
    h1.contentSection__title.contentSection__title--center 指定收货地址

    - var step = 2;
    include ../../../_include/_steplist.pug

    div.l-contentsInner
      form(action="/ec/cart/addition/", method="POST")

        p.contentSection__note 请选择收货地址，然后继续下一步。
        
        section.shipList
          h2.shipList__title 收货地址一览
          ul.shipList__list
            li.shipList__item
              input#shipRadio1(type="radio", name="radio1", checked)
              .shipList__box
                label(for="shipRadio1").shipList__main
                  header.shipList__header
                    h3.shipList__name
                      i.c-inputUI.c-inputUI--checkbox
                      | 星野 翔太
                      small (会员注册住址)
                    p.shipList__tel
                      | 09012345678
                  p.shipList__address
                    | 171-0033
                    | 東京都豊島区高田3ー9−7 ダイワビル
                p.shipList__controls
                  a(href="").l-button--edit
                    span.l-button__label 更改
            li.shipList__item
              input#shipRadio2(type="radio", name="radio1")
              .shipList__box
                label(for="shipRadio2").shipList__main
                  header.shipList__header
                    h3.shipList__name
                      i.c-inputUI.c-inputUI--checkbox
                      | 星野 翔太
                    p.shipList__tel
                      | 02160206756
                  p.shipList__address
                    | 上海市黄浦区淮海中路222号力宝广场26楼
                p.shipList__controls
                  a(href="").l-button--edit
                    span.l-button__label 更改
                  a(href="").l-button--delete
                    span.l-button__label 删除
            li.shipList__item
              a(href="").shipList__box.shipList__box--button
                i.icon--plus
                | 追加新收货地址
            li.shipList__item
              input#shipRadio3(type="radio", name="radio1")
              .shipList__box
                label(for="shipRadio3").shipList__main
                  h3.shipList__name
                    i.c-inputUI.c-inputUI--checkbox
                    | 指定多个收货地址
            
        p.l-contentsInner__buttons
          button.l-button--submit
            span.l-button__label 下一步
            i.l-button__icon.icon--arrow2Right
          button(type="button", onclick="history.back();").l-button--cancel
            i.l-button__icon.icon--arrowLeft
            span.l-button__label 返回
