extends /_include/_layout.pug

block title
  title 送货时间 | LC E-SHOP
block content

  -
    var breadcrumbList = [
      {
        name: '首页',
        href: '/'
      },
      {
        name: '送货时间',
        href: '/ec/cart/addition/'
      }
    ]
  include /_include/_breadcrumblist.pug


  section.contentSection
    h1.contentSection__title.contentSection__title--center 送货时间

    - var step = 3;
    include /_include/_steplist.pug

    div.l-contentsInner
      form(action="/ec/cart/payment/", method="POST")
        
        section.shipList
          h2.shipList__title 收货地址一览
          ul.shipList__list
            li.shipList__item
              .shipList__box
                .shipList__main
                  header.shipList__header
                    h3.shipList__name 星野 翔太
                    p.shipList__tel 09012345678
                  p.shipList__address
                    | 171-0033
                    | 東京都豊島区高田3ー9−7 ダイワビル
                  dl.shipList__options
                    .shipList__options__item.shipList__options__item--single
                      dt.shipList__options__label 送货方式
                      dd.shipList__options__detail
                        span.selectBox
                          select.selectBox__select
                            option(value="1") EMS
                    .shipList__options__item
                      dt.shipList__options__label 送货日
                      dd.shipList__options__detail
                        span.selectBox
                          select.selectBox__select
                            option(value="1") 不需选择送货日
                    .shipList__options__item
                      dt.shipList__options__label 送货时间段
                      dd.shipList__options__detail
                        span.selectBox
                          select.selectBox__select
                            option(value="1") 不需选择送货时间段
            
        p.l-contentsInner__buttons
          button.l-button--submit
            span.l-button__label 下一步
            i.l-button__icon.icon--arrow2Right
          button(type="button", onclick="history.back();").l-button--cancel
            i.l-button__icon.icon--arrowLeft
            span.l-button__label 返回
