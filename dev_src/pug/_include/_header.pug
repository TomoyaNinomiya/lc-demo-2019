.l-modal#modalLangCurrency
  .l-modal__bg.js-closeModal
  .l-modal__body
    h3.l-modal__title 语言・币种设置
    dl.selectModalSettings
      .selectModalSettings__item
        dt.selectModalSettings__label 语言
        dd.selectModalSettings__detail
          .selectBox
            select.selectBox__select.js-lc--selectLanguage
              option(value="1") 簡体中文
      .selectModalSettings__item
        dt.selectModalSettings__label 币种
        dd.selectModalSettings__detail
          .selectBox
            select.selectBox__select.js-lc--selectCurrency
              option(value="1") CNY
    p.l-modal__buttons
      button(type="button").l-button--submit.js-lc--changeLangCurrency
        span.l-button__label 保存更改
        i.l-button__icon.icon--check
      button(type="button").l-button--cancel.js-closeModal
        i.l-button__icon.icon--close
        span.l-button__label 取消
  script.
    $(function () {
      $('.js-lc--changeLangCurrency').on('click', function () {
        var language = $('.js-lc--selectLanguage').val();
        var currency = $('.js-lc--selectCurrency').val();
        location.reload();
      })
    });

