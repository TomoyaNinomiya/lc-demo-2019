extends ../_include/_layout.pug

block title
  title 最新消息 | Sample Project
block header
  - var title = '最新消息'
  include ../_include/_header.pug
block content

  -
    var breadcrumbList = [
      {
        name: '首页',
        href: '/'
      },
      {
        name: '最新消息',
        href: '/news/'
      }
    ]
  include ../_include/_breadcrumblist.pug

  section.contentSection
    h2.contentSection__title.contentSection__title--center 最新消息
    .l-contentsInner
      ul.newsArchive
        - for (var i = 1; i <= 20; i++)
          li.newsArchive__item
            a(href="/page/detail/")
